<?xml version="1.0"?>
<robot name="scara">

<material name = 'blue'>
    <color rgba="0 0.8 0.8 0.8"/>
</material>

<material name = 'yellow'>
    <color rgba="1 1 0 0.8"/>
</material>

<!--Base link -->
<link name="base_link">
    <visual>
        <origin xyz="0 0 0.3"/>
        <geometry>
            <cylinder length="0.6" radius="0.2"/>
        </geometry>
        <material name = 'yellow'/>
    </visual>
</link>

<joint name="base_link_to_link1" type="continuous">
    <parent link="base_link"/>
    <child link="link1"/>
    <axis xyz="0 0 1"/>
    <origin xyz="0 0 1"/>
</joint>

<!--Link 1-->
<link name="link1">
    <visual>
        <origin xyz="0 0 0.25"/>
        <geometry>
            <box size = "2.0 0.2 0.5" />
        </geometry>
        <material name = 'blue'/>
    </visual>
</link>

<link name="link1_visual">
    <visual>
        <origin xyz="0 0 0"/>
        <geometry>
            <cylinder length="0.3" radius="0.2" />
        </geometry>
        <material name = 'blue'/>
    </visual>
</link>

<joint name="link1_to_link1_visual" type="fixed">
    <parent link="link1"/>
    <child link="link1_visual"/>
    <origin xyz="0 0 1"/>
</joint>


<joint name="link1_to_link2" type="continuous">
    <parent link="link1"/>
    <child link="link2"/>
    <axis xyz="0 0 1"/>
    <origin xyz="0 0 1"/>
</joint>

<!--Link 2-->
<link name="link2">
</link>

<link name="ee_link">
</link>

<joint name="link2_to_ee_link" type="continuous">
    <parent link="link2"/>
    <child link="ee_link"/>
    <axis xyz="0 0 1"/>
    <origin xyz="0 0 1"/>
</joint>


</robot>
